{
  "name": "backend",
  "type": "commonjs",
  "description": "Backend for the Scalar project, providing APIs and email services.",
  "license": "MIT",
  "version": "0.1.0",
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/multer": "1.4.13",
    "@types/node": "24.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/react-dom": "^19.1.6",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^6.10.1",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@prisma/client": "^6.10.0",
    "@react-email/components": "^0.1.0",
    "@scalar/api-reference": "^1.31.18",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.3.102",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "react-dom": "^19.1.0",
    "react-email": "^4.0.16",
    "server": "^1.0.41",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^5.0.1",
    "swr": "^2.3.3",
    "zod": "^3.25.67"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "node dist/src/index.js",
    "build": "swc src -d dist --config-file .swcrc && cp package.json dist/package.json && cp -r src/public dist/src/public",
    "postinstall": "prisma generate",
    "email": "email dev --dir src/emails",
    "prisma:generate": "bun prisma generate",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "update-version": "git add . && git push"
  }
}
